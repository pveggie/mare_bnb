<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">

    <h1><%= @form_variables[:header] %> Stallion</h1>

      <%= simple_form_for [@user, @stallion] do |f| %>
      <%= f.input :name %>
      <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 30,
                              end_year: Date.today.year,
                              order: [:day, :month, :year]%>
      <%= f.input :town, placeholder: "Brussels" %>
      <%= f.input :country, as: :string %>
      <!-- We should add a table for categories at some point. -->
      <%= f.input :category, collection: Stallion::CATEGORIES %>
      <%= f.input :breed, collection: Stallion::BREEDS %>
      <%= f.input :colour %>
      <%= f.input :lineage %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn btn-primary form-control"%>
      <% end %>
    </div>
  </div>
</div>
