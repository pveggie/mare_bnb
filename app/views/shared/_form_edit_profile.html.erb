<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h1><%= @profile.profile_made ? "Edit Profile" : "Create Profile" %></h1>

      <%= simple_form_for [@user, @profile] do |f| %>
      <%= f.input :last_name %>
      <%= f.input :title, collection: (Profile::TITLES).sort %>
      <%= f.input :net_worth, label: "Net worth ($ Millions)" %>
      <%= f.input :estate %>
      <%= f.input :town %>
      <%= f.input :country, as: :string  %>
      <%= f.input :stallion_owner, as: :boolean, checked_value: true, unchecked_value: false %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.submit class: "btn btn-primary form-control"%>
      <% end %>
    </div>
  </div>
</div>
