<!doctype html>
<html>
<head>
  <meta  charset="UTF-8">

  <title>MareBnB</title>

  <style>

  .video {
    position:absolute;
    width:100%;
    max-height:100%;
    z-index: -1;
    margin-bottom: 20px;
  }


  .center {
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    height: 100vh;
    background-size: cover;
    text-align: center;
  }


  .badge-bordered {
    box-shadow: 0 1px 2px rgba(0,0,0,0.2);
    border: white 1px solid;
  }

  </style>

</head>

<body>

  <div>
    <%= video_tag("Rolling-horse.mp4", :autoplay => true, class: "video") %>

     <div class="center"><lb>
     <%= image_tag("logo.png", size: "300x300") %>
        <lb>
        <h3>SOWING OATS SINCE 2016</h3><lb>
        <div class="badge-bordered"><h3>See our studs!<h3>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <% Stallion.all.each do |stallion| %>
      <div class="col-xs-12 col-sm-3">
    <%=  link_to user_stallion_path(stallion.user, stallion) do %>
        <div class="card" style="background-image: url('<%= image_url stallion.photo %>'), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));">

          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= stallion.name %></h2>
            <p><%= stallion.category %>  -  <%= stallion.breed %></p>
          </div>
  <!--         <a href="#" class="card-link"></a> -->
        </div>

        <% end %>
      </div>
      <% end %>
    </div>
  </div>

</body>

<%= render "shared/footer" %>


