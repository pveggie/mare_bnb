<% content_for(:title) do %>
<%= @user.first_name %>'s Profile
<% end %>

<!-- stallion summary and booking form-->
<div class="wrapper-white">
  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-sm-8 col-sm-offset-1">
        <%= image_tag "profile.jpg", class:"avatar-large" %>
        <%= @profile.title %> <%= @profile.user.first_name %> <% @profile.last_name %>



      </div>
    </div>
  </div>
</div>

<!-- Stallion details-->
<div class="wrapper-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-7 col-sm-offset-1">


      <h4>Your details</h4>
        <ul class= "list-no-left-padding list-no-bullets">
          <li>Net worth: <%= @profile.net_worth %> million dollars</li>
          <li>Estate: <%= @profile.estate %></li>
          <li>Town: <%= @profile.town %></li>
          <li>Country: <%= @profile.country %></li>
        </ul>
        <div>
          <p><%= link_to "Edit Profile", edit_user_profile_path, class: "link-red" %></p>
        </div>


      </div>
    </div>
  </div>
</div>
